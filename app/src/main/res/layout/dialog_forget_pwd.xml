<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <EditText
        android:id="@+id/edt_fgt_phone_value"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:singleLine="true"
        android:hint="请输入手机号码"
        android:background="@drawable/item_frame_gray_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_fgt_code_value"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_frame_gray_bg"
        android:hint="请输入验证码"
        android:singleLine="true"
        android:inputType="text"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_fgt_phone_value"
        app:layout_constraintStart_toStartOf="@+id/edt_fgt_phone_value"
        app:layout_constraintTop_toBottomOf="@+id/edt_fgt_phone_value" />

    <EditText
        android:id="@+id/et_fgt_new_password"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/item_frame_gray_bg"
        android:layout_marginTop="8dp"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_fgt_phone_value"
        app:layout_constraintStart_toStartOf="@+id/edt_fgt_phone_value"
        app:layout_constraintTop_toBottomOf="@+id/et_fgt_code_value" />

    <EditText
        android:id="@+id/et_fgt_ensure_new_password"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/item_frame_gray_bg"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:hint="确认新密码"
        android:inputType="textPassword"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_fgt_new_password"
        app:layout_constraintStart_toStartOf="@+id/et_fgt_new_password"
        app:layout_constraintTop_toBottomOf="@+id/et_fgt_new_password" />


    <TextView
        android:id="@+id/tv_fgt_getcode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="获取验证码"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/edt_fgt_phone_value"
        app:layout_constraintEnd_toEndOf="@+id/edt_fgt_phone_value"
        app:layout_constraintTop_toTopOf="@+id/edt_fgt_phone_value" />

</android.support.constraint.ConstraintLayout>