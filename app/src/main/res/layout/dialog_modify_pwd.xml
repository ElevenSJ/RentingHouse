<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/et_old_pwd"
        style="@style/TxtCommonGrayNormal"
        android:background="@drawable/item_frame_gray_bg"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:hint="输入旧密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_new_password"
        style="@style/TxtCommonGrayNormal"
        android:background="@drawable/item_frame_gray_bg"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/et_old_pwd"
        app:layout_constraintStart_toStartOf="@+id/et_old_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_old_pwd" />

    <EditText
        android:id="@+id/et_ensure_new_password"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:background="@drawable/item_frame_gray_bg"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:hint="确认新密码"
        android:inputType="textPassword"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_new_password"
        app:layout_constraintStart_toStartOf="@+id/et_new_password"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password" />

</android.support.constraint.ConstraintLayout>