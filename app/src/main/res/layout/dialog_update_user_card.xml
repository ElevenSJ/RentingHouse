<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/et_card_name"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:singleLine="true"
        android:hint="请输入证件姓名"
        android:background="@drawable/item_frame_gray_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_card_id"
        style="@style/TxtCommonGrayNormal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_frame_gray_bg"
        android:hint="输入证件号码"
        android:singleLine="true"
        android:inputType="text"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/et_card_name"
        app:layout_constraintStart_toStartOf="@+id/et_card_name"
        app:layout_constraintTop_toBottomOf="@+id/et_card_name" />

</android.support.constraint.ConstraintLayout>