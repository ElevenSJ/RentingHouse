<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="8dp">

    <TextView
        android:id="@+id/tv_house_name"
        style="@style/TxtCommonBlackBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:text="房源名称"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_house_name"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView14"
            style="@style/TxtCommonBlackNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="6"
            android:text="租期："
            app:layout_constraintBottom_toBottomOf="@+id/tv_rent_time"
            app:layout_constraintEnd_toStartOf="@+id/tv_rent_time"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_rent_time" />

        <TextView
            android:id="@+id/tv_rent_time"
            style="@style/TxtCommonBlackNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            style="@style/TxtCommonBlackNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:text="最近闲置期："
            app:layout_constraintBottom_toBottomOf="@+id/tv_unused_time"
            app:layout_constraintEnd_toStartOf="@+id/tv_rent_time"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="@+id/tv_unused_time" />

        <TextView
            android:id="@+id/tv_unused_time"
            style="@style/TxtCommonBlackSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_rent_time"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/tv_rent_time" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>